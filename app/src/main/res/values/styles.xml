<resources>

    <style name="Theme.Kooktijden" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_kooktijden</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Kooktijden</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Kooktijden</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Kooktijden</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Kooktijden</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Kooktijden</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_kooktijden</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_kooktijden</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Kooktijden</item>


    </style>

    <style name="ActionBar.Solid.Kooktijden" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_kooktijden</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_kooktijden</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_kooktijden</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Kooktijden</item>
    </style>

    <style name="ActionBar.Transparent.Kooktijden" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_kooktijden</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Kooktijden</item>
    </style>

    <style name="PopupMenu.Kooktijden" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_kooktijden</item>
    </style>

    <style name="DropDownListView.Kooktijden" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_kooktijden</item>
    </style>

    <style name="ActionBarTabStyle.Kooktijden" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_kooktijden</item>
    </style>

    <style name="DropDownNav.Kooktijden" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_kooktijden</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_kooktijden</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_kooktijden</item>
    </style>

    <style name="ProgressBar.Kooktijden" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_kooktijden</item>
    </style>

    <style name="ActionButton.CloseMode.Kooktijden" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_kooktijden</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Kooktijden.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Kooktijden</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Kooktijden</item>
    </style>

</resources>
