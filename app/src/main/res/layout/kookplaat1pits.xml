<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tomdoesburg.kooktijden.MainActivity$PlaceholderFragment">

    <!-- Created by Joost on 1/7/14. -->

    <ProgressBar
        android:id="@+id/kookplaat1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:progressDrawable="@drawable/customprogressbar" />

    <TextView
        android:id="@+id/kookplaat1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kookplaat1"
        android:layout_alignTop="@+id/kookplaat1"
        android:layout_alignRight="@+id/kookplaat1"
        android:layout_alignBottom="@+id/kookplaat1"
        android:gravity="center"
        android:textSize="18sp"
        android:text="pick food" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kookplaat1Button1"
        android:layout_toStartOf="@+id/kookplaat1"
        android:background="@drawable/ic_action_alarms"
        android:layout_alignTop="@+id/kookplaat1Button2"
        android:layout_alignRight="@+id/kookplaat1"
        android:layout_alignEnd="@+id/kookplaat1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kookplaat1Button2"
        android:background="@drawable/brocolli"
        android:layout_alignTop="@+id/kookplaat1"
        android:layout_alignLeft="@+id/kookplaat1"
        android:layout_alignStart="@+id/kookplaat1" />

</RelativeLayout>
